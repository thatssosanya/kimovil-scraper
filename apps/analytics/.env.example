# ClickHouse connection
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

# Ingestion settings
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL_MS=5000
ANALYTICS_MAX_QUEUE_SIZE=10000

# Retention settings (in days/years)
ANALYTICS_RAW_RETENTION_DAYS=90
ANALYTICS_ROLLUP_RETENTION_YEARS=2

# Server settings
ANALYTICS_PORT=1489
ANALYTICS_ALLOWED_ORIGINS=*

# API key for stats endpoints (leave empty to disable auth in dev)
# Required in production to protect /v1/stats/* endpoints
ANALYTICS_STATS_API_KEY=
